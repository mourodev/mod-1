---
interface Props {
  title: string;
  description: string;
  link: string;
  image?: string;
}

const { title, description, link, image } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="project-card">
  {image && <img src={image} alt={title} class="project-image" />}
  <h3>{title}</h3>
  <span class="line"></span>
  <p>{description}</p>
  <span class="project-action">Ver no GitHub â†’</span>
</a>

<style>
  .project-card {
    color: inherit;
    text-decoration: none;
    background-color: var(--color-bg-card);
    padding: var(--space-m) var(--space-l);
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    min-height: 250px;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .project-card:hover {
    background-color: var(--color-card-hover);
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .project-image {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 4px 4px 0 0;
  }

  h3 {
    color: var(--color-text-light);
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
  }

  p {
    color: var(--color-text-body);
    font-size: 0.9rem;
    margin: 0;
  }

  .project-action {
    margin-top: auto;
    color: var(--color-primary);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .line {
    width: 100%;
    height: 1px;
    border-bottom: px solid var(--color-border);
  }
</style>
