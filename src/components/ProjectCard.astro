---
interface Props {
  title: string;
  description: string;
  link: string;
  technologies?: string[];
}

const { title, description, link, technologies } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="project-card">
  <h3>{title}</h3>
  <div class="project-description">
    <p>{description}</p>
    <div class="project-technologies">
      {technologies?.map((tech) => <span class="tech-badge">{tech}</span>)}
    </div>
  </div>
  <span class="project-action">Ver no GitHub â†’</span>
</a>

<style>
  .project-card {
    color: inherit;
    text-decoration: none;
    background-color: var(--color-bg-card);
    padding: var(--space-m) var(--space-l);
    border-radius: 4px;
    display: grid;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-s);
    min-height: 250px;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease;

    &:hover {
      background-color: var(--color-card-hover);
      transform: translateY(-5px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    & h3 {
      color: var(--color-text-light);
      font-size: 1.2rem;
      font-weight: 600;
    }

    & .project-description {
      display: grid;
      justify-content: space-between;
      gap: var(--space-s);

      & p {
        color: var(--color-text-body);
        font-size: 0.9rem;
      }
    }
  }

  .project-technologies {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    & .tech-badge {
      background-color: var(--color-bg-dark);
      color: inherit;
      padding: 0.3rem 0.6rem;
      border-radius: 4px;
      font-size: 0.8rem;
      display: inline-block;
    }
  }

  .project-action {
    margin-top: auto;
    color: var(--color-primary);
    font-weight: 500;
    font-size: 0.9rem;
  }
</style>
